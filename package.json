{
  "name": "supavisor",
  "version": "0.2.0",
  "description": "Fast SQL linter for Supabase migrations - your database supervisor",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./parser": {
      "types": "./dist/parser/index.d.ts",
      "import": "./dist/parser/index.js"
    },
    "./linter": {
      "types": "./dist/linter/index.d.ts",
      "import": "./dist/linter/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js"
    }
  },
  "bin": {
    "supavisor": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli/main.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts src/cli/main.ts --format esm --dts --watch",
    "lint": "node bin/cli.js",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "supabase",
    "postgres",
    "sql",
    "linter",
    "migrations",
    "rls",
    "security"
  ],
  "author": "Lucas Oshan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oshankhz/supavisor.git"
  },
  "homepage": "https://github.com/oshankhz/supavisor#readme",
  "bugs": {
    "url": "https://github.com/oshankhz/supavisor/issues"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "libpg-query": "^15.2.0",
    "picocolors": "^1.1.1",
    "glob": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18"
  }
}
